<h2><%= @system.title %></h2>
<ul class="nav nav-tabs">
  <% (1..@system.rounds).each do |round| %>
    <li class="<%= round == @round_number ? 'active' : '' %>" role="presentation">
      <%= link_to "Round #{round}", system_path(@system.id, { round: round }), class: "btn btn-default"%>
    </li>
  <% end %>
</ul>

<% if @pairings[:current].empty? %>
  <% if @pairings[:previous] %>
    <%= link_to "Create Pairings", generate_pairings_system_path(@system.id, { round: @round_number }), class: "btn btn-primary", method: :post%>
  <% end %>
  Pairings haven't been created for this round yet.
<% else %>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Player 1</th>
      <th>Player 2</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
      <%= render partial: 'pairing', collection: @pairings[:current] %>
    </tbody>
  </table>
<% end %>
